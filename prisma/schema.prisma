generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum NotesView {
  CARD
  LIST
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userName  String    @unique
  password  String
  name      String
  notes     Note[]
  notesView NotesView @default(CARD)
  createdAt DateTime  @default(now())
}

model Note {
  noteId    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  noteType  String
  noteName  String
  entries   Entry[]
  noteView  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Entry {
  entryId   String    @id @default(auto()) @map("_id") @db.ObjectId
  noteId    String    @db.ObjectId
  item      String
  priority  String?
  isChecked Boolean?
  category  String?
  createdAt DateTime  @default(now())
  lastEdit  DateTime? @updatedAt
  note      Note      @relation(fields: [noteId], references: [noteId], onDelete: Cascade)
}
